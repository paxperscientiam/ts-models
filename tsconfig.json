{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2015",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./lib/esm",
        "lib": ["dom","es2019"],
        "paths": {
            "@app/*":["./src/*"]
        }
    },
    "include": [
        "./src/index.ts",
        "./src/util.ts"
    ]
}
